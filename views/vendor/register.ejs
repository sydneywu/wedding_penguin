<!DOCTYPE html>
<html lang="en">
<head>
	<% include ../partials/_head_main_script.ejs %>
	<% include ../partials/_head_vendor_script.ejs %>
</head>

<body ng-app="WeddingVendor">

	<div class="container" ng-controller="VendorCtrl">
		<form ng-submit="register()"
		    style="margin-top:30px;">
		    <h3>Register</h3>

		    <div class="form-group">
		      <input type="text"
		      class="form-control"
		      placeholder="Username"
		      ng-model="vendor.username"></input>
		    </div>
		    <div class="form-group">
		      <input type="password"
		      class="form-control"
		      placeholder="Password"
		      ng-model="vendor.password"></input>
		    </div>
		    <button type="submit" class="btn btn-primary">Register</button>
		</form>
	</div>

	<div class="margin-top-30">
		<span> Already signed up? </span>
	</div>
	<div class="clear">
		<a class="btn btn-primary" href="/vendor/login">Login Page</a>
	</div>

</body>
</html>