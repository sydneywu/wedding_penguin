<!DOCTYPE html>
<html lang="en">
<head>
  <% include ../partials/_head_main_script.ejs %>
  <% include ../partials/_head_vendor_script.ejs %>
</head>

<body ng-app="WeddingVendor">

	<div class="container" ng-controller="VendorProfileCtrl">
	    <form ng-submit="updateVendor()">
			<h3>Update Profile</h3>
			
			<div class="form-group">
			
				<input type="text" class="form-control" placeholder="Guest's Name" ng-model="vendor.username">
				<input type="text" class="form-control" placeholder="Email" ng-model="vendor.email">
				<input type="text" class="form-control" placeholder="website" ng-model="vendor.website">
				<input type="text" class="form-control" placeholder="phone" ng-model="vendor.phone">
				<input type="text" class="form-control" placeholder="id" ng-model="vendor._id">
				<input type="text" class="form-control" placeholder="avatar" ng-model="vendor.avatar">
				<select name='category' ng-model="vendor.category">
					<option ng-repeat="o in categories" placeholder="category">{{o}}</option>
				</select>
	
				<button type="submit" class="btn btn-primary">Update</button>
				
			</div>
		</form>
		
		<br><br>
		<h2> Upload Profile Picture </h2>
		<input type="file" file-model="myFile"/>
		<button ng-click="uploadProfilePic()">Upload</button>

		<br><br>

		<div ng-repeat="gallery in vendor.gallery">
			<h3>{{gallery.name}}<h3>
				<h4>Upload Image </h4>
					<input type="file" file-model="myFile"/>
					<button ng-click="uploadGalleryImage()">Upload</button>
			<div ng-repeat="image in gallery.images">
				{{image.url}}
			</div>
		</div>
	
		<form ng-submit="addGallery()">
			<h3>Add New Gallery</h3>
			<div class="form-group">

				<input type="text" class="form-control" placeholder="Gallery Name" ng-model="vendor.galleryName">
				
				<button type="submit" class="btn btn-primary">Update</button>
			</div>
		</form>

	</div>
	

</body>
</html>