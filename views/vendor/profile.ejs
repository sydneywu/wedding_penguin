<body ng-app="WeddingVendor">

	<div class="container" ng-controller="VendorProfileCtrl">
	    <form ng-submit="updateVendor()">
			<h3>Update Profile</h3>
			
			<div class="form-group">
			
				<input type="text" class="form-control" placeholder="Guest's Name" ng-model="vendor.username">
				<input type="text" class="form-control" placeholder="Email" ng-model="vendor.email">
				<input type="text" class="form-control" placeholder="website" ng-model="vendor.website">
				<input type="text" class="form-control" placeholder="phone" ng-model="vendor.phone">
				<input type="text" class="form-control" placeholder="id" ng-model="vendor._id">
				<input type="text" class="form-control" placeholder="avatar" ng-model="vendor.avatar">
				<select name='category' ng-model="vendor.category">
					<option ng-repeat="category in categories" placeholder="category">{{category}}</option>
				</select>
	
				<button type="submit" class="btn btn-primary">Update</button>
				
			</div>
		</form>
		<br><br>
		
		<!--********** Avatar Picture **************-->
		<h2> Profile Picture </h2>
		<input type="file" file-model="myFile"/>
		<button ng-click="uploadAvatarPic()">Upload Profile</button>
		<br>
		<img ng-src="/public/images/vendor/avatar/{{vendor.avatar}}" />
		<br>
		<br>

		<!--********** Showcase Picture **************-->
		<h2> Showcase Pictures </h2>
		<input type="file" file-model="myFile" />
		<button ng-click="uploadShowcasePic()">Upload Image</button>
		<br>
		
		<div ng-repeat = "image in vendor.image">
			<img ng-src="/public/images/vendor/showcase/{{image.path}}"
		</div>




